<%- include("partials/head") %>
<link rel="stylesheet" href="/css/addProduct.css">
</head>
<body>
    <main>
        <%- include("partials/nav") %>
        <section id="products">
            <form id="form-addProduct">
                <label for="nameProduct" id="title-form"><strong>NOMBRE DEL PRODUCTO:</strong></label>
                <input name="nameProduct" type="text" id="input-form" placeholder="Ingrese el nombre del producto..." autocomplete="off">

                <label for="nameProduct" id="title-form"><strong>IMAGEN DEL PRODUCTO:</strong></label>
                <input name="imageProduct" type="text" id="input-form" placeholder="Ingrese la imagen del producto" autocomplete="off">

                <label for="priceProduct" id="title-form"><strong>PRECIO DEL PRODUCTO:</strong></label>
                <input name="priceProduct" type="number" id="input-form" placeholder="Ingrese el precio del producto..." autocomplete="off">

                <label for="categoryProduct" id="title-form"><strong>CATEGORIA DEL PRODUCTO:</strong></label>
                <input name="categoryProduct" type="text" id="input-form" placeholder="Ingrese la categoria del producto..." autocomplete="off">
                
                <p id="title-form"><strong>SE MOSTRARA EN LA WEB?</strong></p>
                <div>
                    <label for="activo" id="title-form">
                    <input name="activo" type="radio" id="input-form-active" value="si" checked>SI
                    </label>
                
                    <label for="activo" id="title-form">
                        <input name="activo" type="radio" id="input-form-active" value="no">NO
                    </label>
                </div>               
                <button type="submit" id="btn-form">AGREGAR</button>
            </form>

            <ul id="list-products">
                <!-- list products js -->
            </ul>
        </section>
    </main>
</body>
<script src="/js/functions_addProduct.js" type="module"></script>
<%- include("partials/footer") %>